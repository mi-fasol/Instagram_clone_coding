<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/postRecycler"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/profile_image" />

        <TextView
            android:id="@+id/pUserNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="mi_fasol"
            android:textSize="15dp"
            android:layout_toRightOf="@id/profileImage"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/postMenu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="414dp"
        android:src="@drawable/profile_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/heart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_favorite_border" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/comment"
            android:layout_width="22.8dp"
            android:layout_height="23dp"
            android:layout_toRightOf="@id/heart"
            android:layout_marginRight="11dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_comment" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dm"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_toRightOf="@id/comment"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1.5dp"
            android:background="@drawable/ic_send_dm" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요 53개"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/postNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mi_fasol"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        />
        <TextView
            android:id="@+id/postContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남자칭구가 목도리를 사줘따. 따뜻해따."
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eoirnx_oegvzn"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/userComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그 남찡구가 나다."
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

</LinearLayout>